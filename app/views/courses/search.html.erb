<h1 class="page-title">Search for Courses</h1>



<%= form_with url: "/courses", method: :get do |form| %>
  <div class="search-action">

    <p>
      <%= form.text_field :search_term, :required => 'required' %>
    </p>
    <p>
      <%= form.submit "Search", class: "search-submit"%>
    </p>
  </div>

<% end %>

<h1 class="page-title">Or</h1>

<div class="favorite-button">
  <h2><%= link_to 'Show favorites', "/courses/favorites", method: :get %></h2>
</div>

