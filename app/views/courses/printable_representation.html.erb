<h2>Favorite courses</h2>

<% if @favorites_printable.length >= 1 %>
  <div class="printable-list">
    <% @favorites_printable.each_with_index do |favorite, index| %>
      <div class="printable-list-item">
        <h3>
          <%= index + 1 %>. <%= favorite["title"].nil? ? favorite["number_semester"] : favorite["title"] %>
        </h3>

        <% if @with_annotation %>
          <p>
            Note: <%= (@annotation.find_by("annot_id" => favorite['number_semester']) && !@annotation.find_by("annot_id" => favorite['number_semester'])&.annotation.empty?) ? @annotation.find_by("annot_id" => favorite['number_semester']).annotation : "Empty" %>
          </p>
        <% end %>


      </div>
    <% end %>
  </div>
<% else %>
  <p class="page-title"> You don't have any favorites. </p>
<% end %>